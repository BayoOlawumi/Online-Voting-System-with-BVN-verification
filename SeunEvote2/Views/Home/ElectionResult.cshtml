

@{
    ViewBag.Title = "Election Result";
    Layout = "~/Views/Shared/voters.cshtml";
}

<h2>Result</h2>


<table class="table">
    <tr>
        <th style="font-size:17px">
            Post
        </th>
    </tr>
  
    @foreach (var item in @ViewBag.Elected)
    {
       
        <tr>
            <td style="color:darkred; border-bottom:5px groove cyan;padding: 0px 0px 0px;text-align:center;font-weight:bolder;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;font-size:15px">
                @item.Post <img src="@Url.Action("Mychart", new { id = @item.Id })" />
            </td>
            
          
                @foreach (var ite in @ViewBag.Contestants)
                {

                    if (item.Id == ite.ElectionId)
                    {

                    <td style="border-right:1px ridge black;border-bottom:5px groove cyan">
                      
                        <span style="font-size:18px;color:black;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"> @ite.Nickname</span>--<span style="color:brown;font-weight:bolder">@ite.Count</span>
                    </td>


                    }


                }

            

            </tr>
    }

</table>
