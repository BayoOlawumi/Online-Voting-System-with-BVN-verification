@using System.Web.Mvc.Html;


@{
    ViewBag.Title = "VoteNow";
    Layout = "~/Views/Shared/voters.cshtml";
}
<style>
    ul li {
        display: inline;
        float: left;
        padding: inherit;
    }

    ul .major {
        border-bottom: 1px ridge cadetblue;
        border-width: 10px;
    }

    ul {
        display: flex;
        list-style: none;
        width: 100%;
    }

    .checker {
        margin-left: 30%;
        font-size: 23px;
    }

</style>



@using (Html.BeginForm("save", "Home", new { DoneId = ViewBag.Electi.Id }, FormMethod.Post, null))
{

    <div class="container body-content thumbnail">
        @Html.AntiForgeryToken()
        <div class="container body-content">

            <div style="padding-left:23px;padding-bottom:30px ">
                <ul>
                    <li>
                        <h4 style="color:chocolate; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;border-bottom:2px solid darkcyan">

                            @ViewBag.Electi.Post

                        </h4>
                    </li>


                    @foreach (var Cons in @ViewBag.Electi.Contestants)
                    {
                        <li>
                            <img src="~/Content/Contestants/@Url.Content(Cons.ProfilePicturePath)"
                                 width="230" height="200" style="padding:7px 7px 5px 10px; border-radius:50%" />
                            <b style="color:darkcyan">@Cons.Party1.PartyName</b>
                            <img src="~/Content/Parties/@Url.Content(Cons.Party1.LogoPath)"
                                 width="30" height="30" style="padding:3px 2px 2px 2px" />
                            <div id="checker">

                                @Cons.Nickname
                                <img src="~/Content/Images/vote.png" width="20" height="30" />

                                <input type="radio" name="@ViewBag.Electi.Post" value="@Cons.Id" />
                       
                            </div>

                        </li>



                                    <hr />
                    }
                </ul>

            </div>
        </div>
       
        <center><input type="submit" name="save" value="Save and Proceed" style="background-color:chocolate; border-radius:10px;margin-left:100%; margin-bottom:6px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;font-weight:bolder;padding:5px 2px 3px 3px" /></center>

</div>




}

