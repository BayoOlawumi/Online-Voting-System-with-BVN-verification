

@{
    ViewBag.Title = "Election Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Result:
  
</h2>@if (@ViewBag.Message != null)
{
    <span style="color:orangered">
        @ViewBag.Message
    </span>
}

<table class="table">
    <tr>
        <th style="font-size:17px">
            Post
            
        </th>
    </tr>

    @foreach (var item in @ViewBag.Elected)
    {
        <tr>
            <td style="color:darkred;padding:0px 0px 0px 0px;text-align:center;font-weight:bolder;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;font-size:15px">
                @item.Post
            </td>
            <td style="background-color:azure">
                @foreach (var ite in @ViewBag.Contestants)
                {

                    if (item.Id == ite.ElectionId)
                    {

                        <td style="border-right:5px groove cyan" >
                            @ite.Nickname--<span style="color:brown;font-weight:bolder">@ite.Count</span>
                        </td>
                           

                    }


                }

            </td>

        </tr>
    }

</table>
<div style="background-color:azure; border-radius:10px;margin-left:80%; margin-bottom:6px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;font-weight:bolder;padding:5px 2px 3px 3px;text-align:center; width:130px;" />
@Html.ActionLink("Declare Result", "Declare")
 </div>  